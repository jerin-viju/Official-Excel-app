
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.greycodes.excel14.fragment.SingleShotImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/signin"
            android:scaleType="centerCrop"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center">

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/profile_image_view_drawer"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/signin2"
                        android:scaleType="fitCenter"
                        android:layout_centerInParent="true"
                        android:contentDescription="profile_\picture"
                        app:siBorderWidth="5dp"
                        app:siBorderColor="#cb1e0d3c" />
                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical" android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:id="@+id/signin"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:maxLines="1"
                        android:textSize="18dp"
                        android:hint="Email"
                        android:singleLine="true"
                        android:textColorHint="#a37c7c7c"
                        android:id="@+id/emailTextView"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:background="#bbdefb"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="18dp"


                        android:id="@+id/passwordTextView"

                        android:gravity="center_vertical"
                        android:hint="Password"
                        android:textColor="#000"
                        android:inputType="textPassword"
                        android:textColorHint="#a37c7c7c"
                        android:paddingLeft="15dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:background="#bbdefb"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="18dp"
                        android:text="sign In"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:id="@+id/sign_in_button"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:background="#42a5f5"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="create an account"
                        android:textSize="15dp"
                        android:textColor="#42a5f5"
                        android:id="@+id/sign_up_button"
                        android:background="#fff"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        />

                </LinearLayout>



            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>